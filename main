import random

# Addition Logic
addx = random.randint(1, 10)
addy = random.randint(1, 10)

add_total = addx + addy 

# subtraction Logic
subx = random.randint(1, 10)
suby = random.randint(1, 10)

sub_total = subx - suby 


player_choice_add = int(input(f"What is the value of {addx} + {addy}? "))
player_choice_sub = int(input(f"What is the value of {subx} - {suby}? "))

if (player_choice_add != add_total):
    print("incorrect")
else:
    print(f"The answer to {addx} + {addy} is {add_total}")

if (player_choice_sub != sub_total):
    print("incorrect")
else:
    print(f"The answer to {subx} - {suby} is {sub_total}")
